<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itobuz.android.awesomechat.app_intro.SplashActivity"
    style="@style/SplashTheme">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_app_logo"
        android:id="@+id/splash_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/spalsh_image_desc"
        tools:ignore="VectorDrawableCompat" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_slug1"
        android:layout_below="@+id/splash_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/slug_padding"
        android:text="@string/app_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_slug2"
        android:layout_below="@+id/app_slug1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/slug2_padding"
        android:text="@string/app_slug"/>

</RelativeLayout>
